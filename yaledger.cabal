name:                yaledger
version:             0.1.0.0
synopsis:            Yet Another Ledger tool
-- description:         
homepage:            http://redmine.iportnov.ru/projects/yaledger
license:             BSD3
license-file:        LICENSE
author:              IlyaPortnov
maintainer:          portnov84@rambler.ru
-- copyright:           
category:            Data
build-type:          Simple
cabal-version:       >=1.8

Flag debug
  default: False
  description: enable debug output

Flag stack-traces
  default: False
  description: enable exception stack traces

library
  if flag(debug)
    CC-Options: -DDEBUG
    if !os(windows)
      CC-Options: "-DDEBUG"
    else
      CC-Options: "-DNDEBUG"

  if flag(stack-traces)
    GHC-Options: -F -pgmF MonadLoc

  exposed-modules: YaLedger.Exceptions
                   YaLedger.Kernel
                   YaLedger.Kernel.Common
                   YaLedger.Kernel.Correspondence
                   YaLedger.Config
                   YaLedger.Main
                   YaLedger.Logger
                   YaLedger.Parser
