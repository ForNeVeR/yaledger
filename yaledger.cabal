  build-depends:       base >= 4 && < 5, mtl >=2.1,
                       transformers >= 0.3,
                       failure >= 0.2.0.1,
                       control-monad-exception ==0.10.*,
                       monadloc ==0.7.*,
                       dates >= 0.2.1.0, containers >=0.4,
                       parsec >=3.1,
                       Decimal ==0.2.*,
                       regex-pcre >=0.94, syb >=0.3,
                       directory >= 1.1,
                       hslogger >= 1.2.1,
                       filepath >=1.3, Glob >=0.7.1,
                       text ==0.11.*,
                       HTTP >= 2.5,
                       hxt >= 9.2.2,
