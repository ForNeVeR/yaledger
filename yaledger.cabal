                       iconv >= 0.4.1,
                       unordered-containers >=0.2,
                       bytestring >=0.9, yaml >=0.8,
                       xdg-basedir >= 0.2.1,
                       xdg-userdirs >= 0.1.0.1

executable yaledger
  if flag(debug)
    CPP-Options: -DDEBUG
    if !os(windows)
      CC-Options: "-DDEBUG"
    else
      CC-Options: "-DNDEBUG"

  if flag(stack-traces)
    GHC-Options: -F -pgmF MonadLoc

  main-is:             yaledger.hs
